<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viranchi.inclass03.AvatarActivity">

    <TextView
        android:id="@+id/txtSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Select an Avatar"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgF1"
        android:layout_width="99dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/avatar_f_1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.096"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.167" />

    <ImageButton
        android:id="@+id/imgM3"
        android:layout_width="99dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/avatar_m_3"
        app:layout_constraintLeft_toRightOf="@+id/imgF1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.641"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgF2"
        android:layout_width="99dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/avatar_f_2"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/imgF1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.167" />

    <ImageButton
        android:id="@+id/imgF3"
        android:layout_width="99dp"
        android:layout_height="95dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgF2"
        app:srcCompat="@drawable/avatar_f_3" />

    <ImageButton
        android:id="@+id/imgM2"
        android:layout_width="99dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/avatar_m_2"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/imgM3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.843" />

    <ImageButton
        android:id="@+id/imgM1"
        android:layout_width="99dp"
        android:layout_height="95dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgM2"
        app:layout_constraintVertical_bias="0.371"
        app:srcCompat="@drawable/avatar_m_1" />
</android.support.constraint.ConstraintLayout>
